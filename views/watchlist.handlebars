<div class="container">
    <h1 class="mt-0">Your Watchlist</h1>
    <p>Update the status of your films or delete them from your watchlist.</p>
    {{#if movies.length}}
        <div class="row">
            {{#each movies}}
                <div class="col-md-4 col-12 mb-3">
                    <div class="card h-100">
                        {{#if this.poster}}
                            <img src="{{this.poster}}" class="card-img-top" alt="{{movie.title}}">
                        {{else}}
                            <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 300px; background-color: #f0f0f0; color: #555; font-weight: bold;">
                                Image Not Available
                            </div>
                        {{/if}}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.title}} ({{this.year}})</h5>
                            <p class="card-text mb-2">IMDB ID: {{this.imdbId}}</p>
                            <p class="card-text mb-2">Status: {{this.status}}</p>
                            <div class="mt-auto d-flex flex-column gap-2 align-items-center">
                                <a href="/watchlist/{{this._id}}/edit" class="btn btn-primary watchlist-btn">Change Status</a>
                                <form action="/api/watchlist/{{this._id}}/delete" method="POST" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-danger watchlist-btn">Delete from Watchlist</button>
                                </form>
                            </div>                           
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>You have no movies in your watchlist yet. Go add some!</p>
    {{/if}}

</div>